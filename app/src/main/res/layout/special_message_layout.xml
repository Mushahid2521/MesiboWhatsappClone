<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:id="@+id/cardview_recive_messsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textview_msg_recive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hidbdbd"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/textview_recive_time"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/textview_msg_recive"
                    android:layout_alignBottom="@id/textview_msg_recive"
                    android:text="12:11 Pm"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>